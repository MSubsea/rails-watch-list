<div class="container">
  <h1><%= @list.name %></h1>
  <h2>Bookmarks</h2>
  <% if @list.bookmarks.size > 0 %>
    <ul>
      <%= @list.bookmarks.each do |bookmark| %>
        <li><%= bookmark.comment %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No bookmarks available.</p>
  <% end %>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
  <%= link_to "All lists", lists_path %>
</div>
